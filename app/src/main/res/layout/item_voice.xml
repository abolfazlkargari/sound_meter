<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_history_play"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_play_circle_filled_orang_24dp"
        tools:layout_editor_absoluteX="22dp" />

    <ImageView
        android:id="@+id/iv_item_history_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/iv_item_history_play"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_history_comment"
        app:srcCompat="@drawable/ic_star_orang_24dp" />

    <TextView
        android:id="@+id/tv_item_history_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="your voice is great"
        android:textColor="#040000"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item_history_play"
        app:layout_constraintStart_toEndOf="@+id/iv_item_history_play"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_history_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="89"
        android:textColor="#FF5722"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item_history_star"
        app:layout_constraintStart_toEndOf="@+id/iv_item_history_star"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_history_comment" />

    <ImageView
        android:id="@+id/iv_item_history_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_history_comment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_more_horiz_gray_24dp" />

    <TextView
        android:id="@+id/tv_item_hostry_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="28 may"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_history_score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_item_history_more" />

</androidx.constraintlayout.widget.ConstraintLayout>