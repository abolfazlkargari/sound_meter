<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_edit_test_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/iv_edit_test_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_white_24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_edit_test_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cancel_white_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_edit_test_cancel"
            android:text="Edit profile"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_edit_test_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/pro"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tv_edit_test_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change profile photo"
        android:layout_marginTop="4dp"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textColor="@color/colorlink"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black"
            android:padding="8dp"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/et_edit_test_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_et"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:padding="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E_mail"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black"
            android:padding="8dp"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/et_edit_test_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_et"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:padding="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bio"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black"
            android:padding="8dp"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/et_edit_test_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_et"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:padding="8dp"/>



    </LinearLayout>

</LinearLayout>